<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <Button
        android:id="@+id/btn_breakfast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아침"
        android:layout_marginBottom="16dp"
        android:padding="16dp"/>

    <TextView
        android:id="@+id/tv_breakfast_totals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="칼로리: 0, 탄수화물: 0, 단백질: 0, 지방: 0"
        android:layout_marginBottom="16dp"
        android:textSize="16sp"/>

    <Button
        android:id="@+id/btn_lunch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="점심"
        android:layout_marginBottom="16dp"
        android:padding="16dp"/>

    <TextView
        android:id="@+id/tv_lunch_totals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="칼로리: 0, 탄수화물: 0, 단백질: 0, 지방: 0"
        android:layout_marginBottom="16dp"
        android:textSize="16sp"/>

    <Button
        android:id="@+id/btn_dinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="저녁"
        android:layout_marginBottom="16dp"
        android:padding="16dp"/>

    <TextView
        android:id="@+id/tv_dinner_totals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="칼로리: 0, 탄수화물: 0, 단백질: 0, 지방: 0"
        android:layout_marginBottom="16dp"
        android:textSize="16sp"/>
</LinearLayout>
